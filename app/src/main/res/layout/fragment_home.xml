<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PerguntasEMain.PerguntasFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinnerHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerBairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/pergunta"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pergunta 1" />

                <RadioButton
                    android:id="@+id/respostaPergunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/respostaPergunta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Não" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/pergunta2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pergunta 2" />

                <RadioButton
                    android:id="@+id/respostaPergunta21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/respostaPergunta22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Não" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/pergunta3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pergunta 3" />

                <RadioButton
                    android:id="@+id/respostaPergunta31"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/respostaPergunta32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Não" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/pergunta4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pergunta 4" />

                <RadioButton
                    android:id="@+id/respostaPergunta41"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/respostaPergunta42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Não" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/pergunta5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pergunta 5" />

                <RadioButton
                    android:id="@+id/respostaPergunta51"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/respostaPergunta52"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Não" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/pergunta6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pergunta 6" />

                <RadioButton
                    android:id="@+id/respostaPergunta61"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/respostaPergunta62"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Não" />
            </RadioGroup>

            <Button
                android:id="@+id/btnEnviarAval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enviar_aval" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>